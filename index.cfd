import (wrap, map, acuteMap, graveMap): ./utils.js as module

/// Fetches a glyph of the given name and returns a classed <span> containing it.
def glyph: inline function glyph(doc, scope, ...args) {

	// Grave accented
	function grave(char) {
		return wrap(char, graveMap[char])
	}

	// Acute accented
	function acute(char) {
		char = char.trim()
		const markup = wrap(char, acuteMap[char])
		return markup
	}

	// Bar overtop of the given character.
	function bar(char) {
		return `<span class="glyph bar ${char}" style="text-decoration:overline">${char}</span>`
	}

	if (args.length === 1) {
		return wrap(name, map[name])
	}
	if (args[0] === 'grave') {
		return grave(args[1])
	}
	if (args[0] === 'actue') {
		return acute(args[1])
	}
	if (args[0] === 'bar') {
		return bar(args[1])
	}
}
